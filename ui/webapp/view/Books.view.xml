<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="book.ui.controller.Books" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Table id="booksTable" inset="false" items="{ path: '/Book' }" width="auto">
						<headerToolbar>
							<Toolbar width="100%" id="__toolbar3">
								<content>
									<Bar id="__bar1">
										<contentLeft>
											<Title text="{i18n>tableTitle}" width="100%" id="__title1"/>
										</contentLeft>
									<contentRight>
									    <Button text="{i18n>addBookButton}" id="__button1" icon="sap-icon://add" type="Emphasized" press="onAddBook"/>
									</contentRight>
									</Bar>
								</content>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="{i18n>bookColumnHeader}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>authorColumnHeader}"/>
							</Column>
							<Column>
								<Text text="{i18n>priceColumnHeader}"/>
							</Column>
							<Column id="__column3">
							    <header>
							        <Text text="{i18n>deleteColumnHeader}" id="__text7"/>
							    </header>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{bookName}" text="{isbn}"/>
									<Text text="{authorName}"/>
									<ObjectNumber number="{ parts:[{path:'price'},{path:'priceCurrency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }" unit="{priceCurrency}"/>
									<Button ariaLabelledBy="__text7" id="__button0" icon="sap-icon://delete" press="onDeleteBook"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>